{
    "openapi": "3.0.0",
    "info": {
        "version": "Auth and User API",
        "title": "User API",
        "description": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8001"
        }
    ],
    "paths": {
        "/user/{uid}/{provider}": {
            "get": {
                "operationId": "user_read",
                "description": "A endpoint to get information on a user according to his uid",
                "responses": {
                    "200": {
                        "description": "User corresponding to uid and backend"
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "provider",
                            "description": ""
                        }
                    },
                    {
                        "name": "uid",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "uid",
                            "description": ""
                        }
                    }
                ],
                "tags": [
                    "user"
                ]
            }
        }
    }
}
